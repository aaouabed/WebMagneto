{% extends 'base.html.twig' %}

{% block title %}Hello GroupsController!{% endblock %}

{% block body %}
<div class="container">
 <br>
    <br>
    <table class="table">
    <thead>
        <tr>
            <th scope="col">Group ID</th>
            <th scope="col">Group</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
            
        </tr>
    </thead>
    <tbody>
        {% for group in groups %}

        <tr>
            
            <td>{{group.id}}</td>
            <td>{{group.groupe}}</td>
            <td>{{group.status}}</td>
            <td><a class="btn btn-primary" href="{{path('group_edit', { 'id': group.id })}}">Edit</a><a class="btn btn-danger" href="{{path('group_delete', { 'id': group.id })}}">Delete</a></td>
            

            
        </tr>

        {% endfor %}
    </tbody>
</table>
<a class="btn btn-info" href="{{path('groups_create')}}">Add new group </a>


{% endblock %}
