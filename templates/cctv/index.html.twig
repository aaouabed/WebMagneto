{% extends 'base.html.twig' %}

{% block title %}Hello CctvController!{% endblock %}

{% block body %}
    <div class="container">
    <br>
    <br>
    <table class="table">
    <thead>
        <tr>
            <th scope="col">Camera ID</th>
            <th scope="col">Location</th>
            <th scope="col">Country</th>
            <th scope="col">Name</th>
            <th scope="col">Group</th>
            <th scope="col">IP</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for camera in cameras %}

        <tr>
            
            <td>{{camera.id}}</td>
            <td>{{camera.location}}</td>
            <td>{{camera.country}}</td>
            <td>{{camera.name}}</td>
            <td>{{camera.groupe}}</td>
            <td>{{camera.ipaddr}}</td>
            <td>{{camera.status}}</td>
            <td><a class="btn btn-primary" href="{{path('cctv_edit', { 'id': camera.id })}}">Edit</a><a class="btn btn-danger"  href="{{path('cctv_delete', { 'id': camera.id })}}">Delete</a></td>
            

            
        </tr>

        {% endfor %}
    </tbody>
</table>

<a class="btn btn-info" href="{{path('cctv_create')}}">Add new Camera </a>



{% endblock %}
